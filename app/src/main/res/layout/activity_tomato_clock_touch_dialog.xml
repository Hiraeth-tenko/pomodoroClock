<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    tools:context=".dialog.tomato_clock_touch_dialog">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tomato_clock_touch_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="番茄钟名称"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/tomato_clock_touch_dialog_edit"
                android:layout_marginHorizontal="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="编辑"
                android:background="@drawable/common_background"/>
            <Button
                android:id="@+id/tomato_clock_touch_dialog_del"
                android:layout_marginHorizontal="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/red"
                android:text="删除"
                android:textSize="18sp"
                android:background="@drawable/common_background"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp"
                android:text="累计专注"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/blue2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tomato_clock_touch_dialog_count"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="使用次数"
                    android:textSize="20sp"
                    android:textColor="@color/blue2"/>
                <TextView
                    android:id="@+id/tomato_clock_touch_dialog_duration"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue2"
                    android:text="使用总时长"/>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>